{
  "manifest_version": 3,
  "minimum_chrome_version": "93",
  "name": "Search Logging",
  "description": "It's a secret to everybody.",
  "version": "1.0",
  "action": {
    "default_popup": "/pages/popup_searches.html",
    "default_icon": "/images/extension.png"
  },
  "background": {
    "service_worker": "/scripts/background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "downloads"],
  "host_permissions": ["*://*/*"]
}
